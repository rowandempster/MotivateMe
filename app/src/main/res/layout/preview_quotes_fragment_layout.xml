<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/preview_quotes_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Loading..." />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/preview_quotes_content_view"
        android:layout_width="match_parent"
        android:background="@drawable/primary_light_border_bottom_only"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/preview_quotes_recycler_view"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            android:layout_weight="5"/>


        <enghack.motivateme.CustomViews.MotivateMeButton
            android:id="@+id/preview_quotes_twitter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Go to twitter account" />

    </FrameLayout>

</LinearLayout>